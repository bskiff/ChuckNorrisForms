<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChuckNorrisForms.WelcomePage"
             Padding="0,20,0,0">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Label Text="Welcome to Chuck Norris Quotes" VerticalOptions="StartAndExpand" HorizontalOptions="Center" TextColor="Black" />
    <Image Source="chuck-norris.jpg"/>
    <Label Text="{Binding Path=CurrentQuote}"/>
    <Button Text="Next Quote" VerticalOptions="StartAndExpand" HorizontalOptions="Center" Clicked="Button_OnClicked"/>
  </StackLayout>
</ContentPage>